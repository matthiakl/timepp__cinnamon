{
    "layout1": {
        "type": "layout",
        "pages": ["page1", "page2", "page3", "page4", "page5", "page6"],

        "page1": {
            "type": "page",
            "title": "General",
            "sections": ["section1"]
        },

        "page2": {
            "type": "page",
            "title": "Timer",
            "sections": ["section2"]
        },

        "page3": {
            "type": "page",
            "title": "Stopwatch",
            "sections": ["section3"]
        },

        "page4": {
            "type": "page",
            "title": "Pomodoro",
            "sections": ["section4"]
        },

        "page5": {
            "type": "page",
            "title": "Alarms",
            "sections": ["section5"]
        },

        "page6": {
            "type": "page",
            "title": "Todo/Time Tracker",
            "sections": ["section6", "section7", "section8"]
        },

        "section1": {
            "type": "section",
            "title": "General Settings",
            "keys": ["unicon_mode", "unicon"]
        },

        "section2": {
            "type": "section",
            "title": "Timer Settings",
            "keys": ["timer_icon", "timer_separate_menu", "timer_panel_mode", "timer_show_secs", "timer_key_open"]
        },

        "section3": {
            "type": "section",
            "title": "Stopwatch Settings",
            "keys": ["stopwatch_icon", "stopwatch_separate_menu", "stopwatch_panel_mode", "stopwatch_show_secs", "stopwatch_key_open"]
        },

        "section4": {
            "type": "section",
            "title": "Pomodoro Settings",
            "keys": ["pomo_icon", "pomo_separate_menu", "pomo_panel_mode", "pomo_show_secs", "pomo_key_open", "pomo_stop_time_tracking", "pomo_script_path"]
        },

        "section5": {
            "type": "section",
            "title": "Alarms Settings",
            "keys": ["alarm_icon", "alarm_separate_menu", "alarm_key_open", "alarm_snooze_duration"]
        },

        "section6": {
            "type": "section",
            "title": "Misc",
            "keys": ["todo_icon", "todo_separate_menu", "todo_panel_mode", "todo_task_width"]
        },

        "section7": {
            "type": "section",
            "title": "File paths",
            "keys": ["todo_txt_file_path", "done_txt_file_path", "time_tracker_csv_dir"]
        },

        "section8": {
            "type": "section",
            "title": "Keybindings",
            "keys": ["todo_key_open", "todo_key_open_to_add", "todo_key_open_to_search"]
        }
    },

    "unicon_mode": {
        "type": "switch",
        "description": "Show single icon in panel",
        "default": false
    },

    "unicon": {
        "dependency": "unicon_mode",
        "type": "iconfilechooser",
        "indent": true,
        "description": "Icon when using one panel item",
        "default": "/img/unicon-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "timer_icon": {
        "type": "iconfilechooser",
        "description": "Timer Panel Icon",
        "default": "/img/timer-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "timer_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "timer_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "timer_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false
    },

    "timer_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },

    "stopwatch_icon": {
        "type": "iconfilechooser",
        "description": "Stopwatch Panel Icon",
        "default": "/img/stopwatch-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "stopwatch_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "stopwatch_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "stopwatch_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false
    },

    "stopwatch_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },

    "pomo_icon": {
        "type": "iconfilechooser",
        "description": "Pomodoro Panel Icon",
        "default": "/img/pomodoro-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "pomo_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "pomo_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "pomo_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false
    },

    "pomo_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },

    "pomo_stop_time_tracking": {
        "type": "switch",
        "description": "Stop time tracking when pomo is paused",
        "default": false
    },

    "pomo_script_path": {
        "type": "filechooser",
        "description": "Execute custom script when pomo starts or pauses",
        "select-dir": false,
        "default": "",
        "tooltip": " "
    },

    "alarm_icon": {
        "type": "iconfilechooser",
        "description": "Alarms Panel Icon",
        "default": "/img/alarms-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "alarm_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "alarm_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },

    "alarm_snooze_duration": {
        "type": "spinbutton",
        "default": 300,
        "min": 1,
        "max": 81420,
        "units": "sec",
        "step": 1,
        "description": "Snooze duration"
    },

    "todo_icon": {
        "type": "iconfilechooser",
        "description": "Todo Panel Icon",
        "default": "/img/todo-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "todo_separate_menu": {
        "type": "checkbox",
        "description": "Show in separate menu",
        "default": true
    },

    "todo_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 0,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "todo_task_width": {
        "type": "spinbutton",
        "default": 300,
        "min": 100,
        "max": 81420,
        "units": "px",
        "step": 1,
        "description": "Task width"
    },

    "todo_key_open": {
        "type": "keybinding",
        "description": "Open this section.",
        "default": ""
    },

    "todo_key_open_to_add": {
        "type": "keybinding",
        "description": "Open this section and add task.",
        "default": ""
    },

    "todo_key_open_to_search": {
        "type": "keybinding",
        "description": "Open this section and search tasks.",
        "default": ""
    },

    "todo_txt_file_path": {
        "type": "filechooser",
        "description": "Path to todo.txt file",
        "select-dir": false,
        "default": ""
    },

    "done_txt_file_path": {
        "type": "filechooser",
        "description": "Path to done.txt file",
        "select-dir": false,
        "default": ""
    },

    "time_tracker_csv_dir": {
        "type": "filechooser",
        "description": "Dir in which to store the time-tracker csv files",
        "select-dir": true,
        "default": ""
    }
}
